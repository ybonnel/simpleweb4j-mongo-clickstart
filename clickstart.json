{
    "id": "simpleweb4j-clickstart",
    "name": "SimpleWeb4j clickstart",
    "source": "github",
    "description" : "Deploy a SimpleWeb4j application with mongodb on CloudBees with continuous deployment (beta)",
    "icon" : "https://secure.gravatar.com/avatar/acede2545a558df3b183683a0cf9b962?s=420&d=https://a248.e.akamai.net/assets.github.com%2Fimages%2Fgravatars%2Fgravatar-user-420.pngïœ©",    

    "supported-by" : "community",
    "order" : 0,

    "runtime": {
        "type": "java",
        "app-parameters" : { 
            "runtime.java_version": "1.7",
            "runtime.class": "com.mycompany.Main"
        }
        
    },
    "services": [
        {
            "name": "mongohq",
            "plan": "base",
            "settings": {},
            "resources": [
                {
                    "type": "mongodb",
                    "alias": "beers",
                    "settings": {
                        "plan": "sandbox"
                    }
                }
            ]
        }
    ],
    "build-with-jenkins": {
        "template": {
            "type": "https://raw.github.com/ybonnel/simpleweb4j-mongo-clickstart/master/jenkins.xml",
            "options": {
            }            
        }
    }
}
